@model HotToursVM

@{
	ViewData["Title"] = "Home Page";
}

<div class="hot-offers-container">
	@foreach(var item in Model.Tours)
	{
		<div class="card">
			<a asp-controller="Tour" asp-action="Details" asp-route-id="@item.Id" >
				@if(item.Hotel.Images == null || !item.Hotel.Images.Any()){
					<img src="~/Files/NoImg.png">
				}else{
					<img src="@Url.Content(item.Hotel.Images[0].Path)" alt="Hotel">
				}
			</a>
			<div class="card-vertical-body">
				<div>
					<a asp-controller="Tour" asp-action="Details" asp-route-id="@item.Id">
						<h5 class="card-title">@item.Title</h5>
					</a>
					<p>@item.Country, @item.City</p>
				</div>
			</div>
			<div class="card-bottom">
				<div class="card-body-price">@item.Price$</div>
				<div style="font-size:11px;">Tour price (@item.AviablePeopleCount Adult(-s))</div>
			</div>
				<a asp-controller="Tour" asp-action="Details" asp-route-id="@item.Id" class="card-linkbtn-details">Details</a>
		</div>
	}
</div>
